<h1>Listing posts</h1>
<%= paginate(@posts)%>
<% @posts.each do |post| %>
  <div>
    <h3><strong><%=post.title%></strong></h3>
    <br>
    <%= post.text %>
  </div>
  <%= link_to 'Show', post_path(post),class: "btn btn-warning"%>
  <%if user_signed_in?%>
    <%if post.user_id == current_user.id%>
      <td><%= link_to 'Edit', edit_post_path(post),class: "btn btn-success" %></td>
      <td><%= link_to 'Destroy', post_path(post),
        method: :delete,
        data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
    <%end%>
  <%end%>      
<%end%>
